<UserControl x:Class="TimeTracker.Gantt2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeTracker"
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Table}" GridLinesVisibility="None" HeadersVisibility="None">
            <DataGrid.Columns>
                <DataGridTextColumn Width="50" Header="Column 1" />
                <DataGridTextColumn Width="50" Header="Column 2" />
                <DataGridTextColumn Width="50" Header="Column 2" />
                <DataGridTextColumn Width="50" Header="Column 2" />
                <DataGridTextColumn Width="50" Header="Column 2" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
